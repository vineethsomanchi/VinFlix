<!DOCTYPE html>
<html>
  <head>

    <title>VinFlix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%# Bootstrap current user to root page %>
    <% if logged_in? %>
      <script id="bootstrap-current-user" type="text/javascript">
            window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>
      </script>
    <% end %>


    <script type="text/javascript" >
      window.logo = "<%= image_url('logo.png') %>"
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
